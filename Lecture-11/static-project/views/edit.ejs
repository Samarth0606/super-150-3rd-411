<%- include("./partials/header") %>
    <h1> Form for editing existing blog </h1>

    <a href="/blogs">Back</a>
    <form action="/blogs/<%=returnedItem.id%>?_method=PATCH" method="POST">
        <label for="auth">Author:</label>
        <input type="text" name="author" id="auth" value="<%=returnedItem.author%>">
        <br>
        <label for="comment">Comment:</label>
        <input type="text" name="comment" id="comment" value="<%=returnedItem.comment%>">
        <br>
        <button>Edit Blog</button>
    </form>
<%- include("./partials/footer") %>
